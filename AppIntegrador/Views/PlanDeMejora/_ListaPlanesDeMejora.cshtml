@model IEnumerable<AppIntegrador.Models.PlanDeMejora>

<h2 class="text-center"><b>Planes de Mejora</b></h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaFin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profesor.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profesor1.Cedula)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profesor.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profesor1.Cedula)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Codigo, cedula = item.CedProf }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Codigo, cedula = item.CedProf }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Codigo, cedula = item.CedProf })
            </td>
        </tr>
    }

</table>