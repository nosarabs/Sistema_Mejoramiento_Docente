@model IEnumerable<AppIntegrador.Models.PlanDeMejora>

@{
    ViewBag.Title = "Planes de Mejora";
    ViewBag.pantalla = 2;
}

<div class="dashboardPlanesDeMejora">
    <div class="leftPanel">
        <ul>
            <li>
                @*@Html.ActionLink("Ver mis planes de mejora", "Index", null, new { @class = "btn btn-Nuevo", pantalla = 1 })*@
                <button class="btn btn-Nuevo" onclick="showPartialView(1)">Ver mis planes de mejora</button>
            </li>
            <li>
                @*@Html.ActionLink("Crear nuevo plan de mejora", "Index", null, new { @class = "btn btn-Nuevo", pantalla = 2 })*@
                <button class="btn btn-Nuevo" onclick="showPartialView(2)">Crear nuevo plan de mejora</button>
            </li>
        </ul>

    </div>
    <div class="contentPanel">
        <div class="wrapperPlanesDeMejora">

            <!-- Seccion de listado de los planes de mejora -->
            @if (ViewBag.pantalla == 1)
            {
                <div class="listadoPlanesDeMejora">
                    <div class="indexPlanesDeMejora">

                        @if (Model.Count() == 0)
                        {
                            <h2 class="text-center">Planes de Mejora</h2>
                            <div class="centeredText">
                                <p>No tiene ningún plan relacionado a usted.</p>
                            </div>
                        }
                        else
                        {
                            @Html.Partial("_ListaPlanesDeMejora")
                        }
                    </div>
                </div>
            }

            <!-- Seccion de creacion de los planes de mejora -->
            @if (ViewBag.pantalla == 2)
            {
                <div class="creacionPlanesDeMejora">
                    @Html.Partial("_CrearPlanDeMejora")
                    <hr />
                </div>
            }
        </div>
    </div>
</div>



<script type="text/javascript">
    function showPartialView(screen) {
        pantalla = screen;
        console.log(screen)
    }
</script>