@{
    ViewBag.Title = "Añadir Profesores";
    var ProfesoresLista = (List<string>)ViewBag.ProfesoresLista;
    var ProfesoresNombreLista = (List<String>)ViewBag.ProfesoresNombreLista;
}

<div class="form-horizontal card-group">
    <div class="modal fade" id="ModalProfesoresVer" tabindex="-1" role="dialog" aria-labelledby="ModalProfesoresLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div id="ModalListarProfesoresInterno" style="width:auto">


                        <h4> Profesores del plan </h4>

                        <table id="TablaListarProfesores" class="table table-striped table-bordered table-sm " cellspacing="0" width="100%">

                            <thead>
                                <tr>
                                    <th>
                                        Nombre
                                    </th>
                                    <th>
                                        Correo
                                    </th>
                                </tr>
                            </thead>
                            <thead>
                                @for (int i = 0; i < ProfesoresLista.Count(); ++i)
                                {
                                    <tr>
                                        
                                        <td>
                                            @ProfesoresNombreLista[i]
                                        </td>
                                        <td>
                                            @ProfesoresLista[i]
                                        </td>
                                    </tr>
                                }
                            </thead>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-blancoUCR" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>
