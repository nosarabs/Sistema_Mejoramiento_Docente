@model IEnumerable<AppIntegrador.Models.Formulario>
@{
    ViewBag.Title = "_TablaFormularios";
}

@if (Model.Count() == 0)
{
    <div>
        Aún no se han escogido formularios para el plan.
    </div>
}
else
{
    <table id="TablaMostrarFormularios" class="table table-striped table-bordered table-sm " cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Código
                </th>
            </tr>
        </thead>
        <thead>
            @foreach (var formulario in Model)
            {
                <tr>
                    <td>
                        @formulario.Nombre
                    </td>
                    <td>
                        @formulario.Codigo
                    </td>
                </tr>
            }
        </thead>
    </table>
}
