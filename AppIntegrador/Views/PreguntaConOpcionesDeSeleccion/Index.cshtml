@model IEnumerable<AppIntegrador.Models.Pregunta_con_opciones_de_seleccion>

@{
    ViewBag.Title = "Banco de preguntas";
}

<h2>Banco de preguntas</h2>

<link href="https://unpkg.com/bootstrap-table@1.15.4/dist/bootstrap-table.min.css" rel="stylesheet">


@using (Html.BeginForm(FormMethod.Get))
{
    //the following are search options
    <b>
        Search Option:
    </b>@Html.RadioButton("option", "Tipo") <text>Tipo</text> @Html.RadioButton("option", "Codigo") <text>Codigo</text>
    @Html.TextBox("search")
    <input type="submit"
           name="submit"
           value="Filtrar" />
}


@*<b>
        Search Option:
    </b> @Html.RadioButton("option", "Tipo") <text>Tipo</text>
    @Html.RadioButton("option", "Codigo") <text>Codigo</text>
    @Html.TextBox("search")
    <input type="submit" name="Filtrar" value="Filtrar" />*@


<table id="selectedColumn" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pregunta_con_opciones.Pregunta.Enunciado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pregunta_con_opciones.Pregunta.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pregunta_con_opciones.TituloCampoObservacion)
            </th>
            <th>
                Operaciones
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pregunta_con_opciones.Pregunta.Enunciado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pregunta_con_opciones.Pregunta.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pregunta_con_opciones.TituloCampoObservacion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Codigo }) |
                @Html.ActionLink("Details", "Details", new { id = item.Codigo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Codigo })
            </td>
        </tr>
    }
</table>


@section Scripts {

    <script>
        $(document).ready(function () {
            $('#dtBasicExample').DataTable({
                "ordering": false // false to disable sorting (or any other option)
            });
            $('.dataTables_length').addClass('bs-select');
        });
    </script>

    <link href="https://unpkg.com/bootstrap-table@1.15.4/dist/bootstrap-table.min.css" rel="stylesheet">

    <script src="https://unpkg.com/bootstrap-table@1.15.4/dist/bootstrap-table.min.js"></script>

    <script src="https://unpkg.com/bootstrap-table@1.15.4/dist/bootstrap-table.min.js"></script>

}