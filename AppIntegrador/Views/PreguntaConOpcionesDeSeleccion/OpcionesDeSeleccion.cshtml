@model AppIntegrador.Models.Opciones_de_seleccion
@{
    int i = ViewBag.i == null ? 0 : ViewBag.i;
}
<div class="sortable-container vertical panel test">
    @Html.LabelFor(opcion => opcion.Texto, "Texto de la opción", htmlAttributes: new { @class = "control-label col-md-2 form-horizontal " })
    <div class="col-xs-6">
        @Html.TextBoxFor(opcion => opcion.Texto, null, new
        {
            @Name = "[" + i + "].Texto",
            @class = "texto form-control col-xs-6",
            @maxlength = "50",
            @onkeyup = "charCount(this)"
        })
        <div class="counter small pull-right">0/50 caracteres usados</div>
    </div>

    <button type="button" [disabled]="true" class="remove-button btn btn-danger" onclick="removeOption(this)">Borrar</button>
    
    <div style="display: none">
        @Html.TextBoxFor(opcion => opcion.Orden, null, new
        {
            @Name = "[" + i + "].Orden",
            @class = "orden",
            @Value = i
        })
    </div>
</div>

