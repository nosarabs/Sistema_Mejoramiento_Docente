@model AppIntegrador.Models.Opciones_de_seleccion
@{
    int i = ViewBag.i == null ? 0 : ViewBag.i;
}
<div class="sortable-container card test row">
    <div class="custom-control custom-radio control-label" style="margin-top: 25px">
        <input type="radio" class="checkmark" aria-label="..." checked>
    </div>
    @*Html.LabelFor(opcion => opcion.Texto, "Texto de la opción", htmlAttributes: new { @class = "control-label col-lg-2 form-horizontal " })*@
    <div class="col-lg-11" style="margin-top: 18px">
        @Html.TextBoxFor(opcion => opcion.Texto, null, new
        {
            @Name = "[" + i + "].Texto",
            @class = "validar texto form-control",
            @maxlength = "50",
            @onkeyup = "contarCaracteres(this)",
            @placeholder = "Texto de opción"
        })
        <div class="contador small float-right">0/50 caracteres usados</div>
    </div>

    <button type="button" [disabled]="true" class="remove-button btn btn-danger" onclick="removeOption(this)" style="margin-top: 18px; margin-right: 18px">X</button>
    
    <div style="display: none">
        @Html.TextBoxFor(opcion => opcion.Orden, null, new
        {
            @Name = "[" + i + "].Orden",
            @class = "orden",
            @Value = i
        })
    </div>
</div>
