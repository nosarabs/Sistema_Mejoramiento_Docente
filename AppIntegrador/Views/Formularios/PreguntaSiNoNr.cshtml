        .card {
            margin-bottom: 20px;
            background-color: white;
            border: 1px solid #939393;
            border-radius: 4px;
            font: "robot";
            font-size: 18px;
            -webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
            box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
            margin-left: 20%;
            margin-right: 20%;
        }

        .card-primary > .card-heading {
            color: #000;
            background-color: #e9e9e9;
            border-color: #888b8f;
            .card-body

        {
            padding: 10px;
