@model AppIntegrador.Models.PreguntaConNumeroSeccion

@{
    Layout = null;
}

@*RIP-EDF6*@

@*Se ocupa el código de la pregunta para poder guardar las respuestas*@
@Html.Hidden("secciones[" + Model.OrdenSeccion + "].Preguntas[" + Model.OrdenPregunta +
        "].Pregunta.Codigo", null, new { @Value = Model.Pregunta.Codigo })

@*Se está aprovechando que los modelos tienen referencias a tablas a las que tiene llave foránea o viceversa, 
   en vez de crear uno o varios modelos distintos.*@
@{string radname = "secciones[" + Model.OrdenSeccion + "].Preguntas[" + Model.OrdenPregunta +
          "].Pregunta.Responde_respuesta_con_opciones[0].Opciones_seleccionadas_respuesta_con_opciones[0].OpcionSeleccionada"; }
<div class="card card-primary full">
    @Html.DisplayFor(model => Model.Pregunta.Enunciado)

    <div class='card-body'>

        <input type="radio" name="@radname" value="0" />

        Sí
    </div>

    <div class='card-body'>

        <input type="radio" name="@radname" value="1" />

        No
    </div>

    <div class='card-body'>

        <input type="radio" name="@radname" value="2" />

        No responde
    </div>
</div>

@if (!Request["rad"].IsEmpty())
{
    <ul>

        @foreach (var selection in Request["rad"].Split(','))
        {
            <li>@selection</li>
        }
    </ul>
}

