@model AppIntegrador.Models.PreguntaConNumeroSeccion

@{
    Layout = null;
}

@*RIP-EDF6*@

@*Se está aprovechando que los modelos tienen referencias a tablas a las que tiene llave foránea o viceversa,
    en vez de crear uno o varios modelos distintos.*@
@{string respuestaname = "secciones[" + Model.OrdenSeccion + "].Preguntas[" + Model.OrdenPregunta + "].RespuestaLibreOJustificacion"; }

<div class="card card-primary full">
    @Html.DisplayFor(model => Model.Pregunta.Enunciado)

    <div class='card-body'>

        <textarea class="form-control long-textbox col-md-12" style="width: 100%;max-width: 100%; min-width: 100%" cols="50" 
                  name="@respuestaname">@Model.RespuestaLibreOJustificacion</textarea>
    </div>
</div>