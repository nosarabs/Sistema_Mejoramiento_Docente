@model IEnumerable<AppIntegrador.Models.PreguntaConOpciones>

@{
    Layout = null;
}

@*RIP-EDF6*@

@{string radname = "rad"; }
@foreach (var pregunta in Model)
{
    // Variable que para poner el name que identifique los radiobuttons dentor de una pregunta
    { radname = "rad" + pregunta.CodigoSeccion + pregunta.CodigoPregunta; }

    <div class="card card-primary full">
            @Html.DisplayFor(model => pregunta.Enunciado)

            @foreach (var opcion in pregunta.Opciones)
            {
                <div class='card-body'>

                    <input type="radio" name="@radname" value="@opcion" />

                    @Html.DisplayFor(model => opcion)
                </div>
            }
    </div>
}

@if (!Request["rad"].IsEmpty())
{
    <ul>

        @foreach (var selection in Request["rad"].Split(','))
        {
            <li>@selection</li>
        }
    </ul>
}

