@model IEnumerable<AppIntegrador.Models.SeccionConPreguntas>
@{
    Layout = null;
}

@foreach (var item in Model)
{

    @Html.Hidden("secciones[" + item.Orden + "].CodigoSeccion", null, new { @Value = item.CodigoSeccion })
    var displayOrden = item.Orden + 1;
    <div class="card card-primary shadow">
            <div class='card-header'>
                <div class="row">
                    <span style=" font-size: 20px;" class = "col-lg-11 col-md-10" >
                        @displayOrden.
                        @Html.DisplayFor(model => item.Nombre, new { style = "font-size: 20px;"})
                    </span>
                    @if (item.Edicion)
                    {
                        <button type="button" [disabled]="true" class="remove-button btn btn-danger" style="margin-left: 3%" id="borrarSec" onclick="BorrarSeccion('@item.CodigoSeccion')">X</button>
                    }
                </div>
            </div>
        <div class='card-body '>
            @{Html.RenderPartial("TodasLasPreguntas", item.Preguntas);}
        </div>
    </div>
    <br />
}

<style>
    .full {
        margin-left: 2%;
        margin-right: 0%;
        background: white;
        border: transparent;
    }

    .card-header {
        font-size: 20px;
    }
</style>

