@model AppIntegrador.Models.LlenarFormulario

@{
    ViewBag.Title = "Llenar formulario";
}

@using (Html.BeginForm("GuardarRespuestas", "Formularios", FormMethod.Post))
{
    @Html.Hidden("respuestas.FCodigo", null, new { @id = "respuestas.FCodigo", @Value = Model.Formulario.Codigo })

    <h2 id="encabezado" class="text-center">Llenar formulario "@Html.DisplayFor(model => model.Formulario.Nombre)"</h2>

    <div id="section-container">
        @{ Html.RenderPartial("SeccionConPreguntas", Model.Secciones); }
    </div>


    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <div class="form-group">
                <div class="col-lg-offset-3 col-lg-10">
                    <button type="submit" class="btn btn-info">Guardar Respuestas</button>

                    @Html.ActionLink("Cancelar", "LlenarFormulario", "Controller", new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}

<style>
    #section-container {
        margin-left: 1%;
        margin-right: 1%;
    }

    .text-center {
        font: 400 25px Roboto,RobotoDraft,Helvetica,Arial,sans-serif;
    }
</style>
