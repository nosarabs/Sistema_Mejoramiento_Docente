﻿@model AppIntegrador.Models.Usuario

    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        @Styles.Render("~/Content/users&profiles")
    </head>

@{
    ViewBag.Title = "Login";
}
<body id="greybg">

    <h2 class="text-center">Sistema de Mejoramiento Docente de la Universidad de Costa Rica</h2>

    <!-- UserStory TAM-1.5 - Modal for email reset -->
    <div class="modal fade bannerformmodal" tabindex="-1" role="dialog" aria-labelledby="bannerformmodal" aria-hidden="true" id="bannerformmodal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-justify">
                    <h4 class="modal-title">Restablecer contraseña</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body mx-3">
                    <div class="md-form mb-5">
                        <label class="text-left">Correo</label>
                        @*<i class="fas fa-user prefix grey-text"></i>*@
                        <input type="text" id="orangeForm-name" class="form-control validate">
                    </div>
                </div>
                <div class="modal-footer d-flex text-right">
                    <button class="btn">Enviar</button>
                    <button class="btn" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- End of UserStory  -->

    <div class="container-login100">
        <div class="row">
            <div class="blue-box">
                <img class="ucr-logo mb-2" src='/Content/images/logo_ucr.png' border='0' alt='logo-ucr' />
                @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group mx-1">
                        <label style="color:white; font-weight:bold; font-size:16px;">Usuario</label>
                        @Html.TextBoxFor(m => m.Username, new { @maxlength = "30", @class = "form-control", required = "required" })
                        <p style="color:red;">@Html.ValidationMessageFor(m => m.Username)
                    </div>
                    <div class="form-group mx-1">
                        <label style="color:white; font-weight:bold; font-size:16px;">Contraseña</label>
                        <!-- UserStory TAM-1.1.3 - Capslock detection -->
                        <input class="form-control" id="password-field" name="Password" type="password" data-toggle="popover" data-placement="left" data-trigger="manual" data-title="Mayúsculas activadas" maxlength="25" autocomplete="off" required />
                        <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password mr-2" style="font-size:inherit;cursor:pointer"></span>
                        <p style="color:red;">@Html.ValidationMessageFor(m => m.Password)</p>
                        <!-- End of UserStory  -->
                    </div>
                    <!-- UserStory 1.5 - link to modal -->
                    <div class="form-row justify-content-between mx-1 pb-3">
                        <button type="submit" class="btn btn-default">Ingresar</button>
                        <a class="align-self-start" href="#bannerformmodal" data-toggle="modal" data-target="#bannerformmodal"><small style="color:gray;">¿Has olvidado la contraseña?</small></a>
                        <!-- End of UserStory  -->
                    </div>
                }
            </div>
        </div>
    </div>
    <footer class="flex-foot fixed-bottom">
        &copy; Universidad de Costa Rica
        <script type="text/javascript">document.write(new Date().getFullYear());</script>
    </footer>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/custom")
</body>

