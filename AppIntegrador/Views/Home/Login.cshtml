﻿@model AppIntegrador.Models.Usuario

    <head>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        @Styles.Render("~/Content/users&profiles")
    </head>

@{
    ViewBag.Title = "Login";
}
<body id="greybg">

    <h2 class="text-center">Sistema de Mejoramiento Docente de la Universidad de Costa Rica</h2>

    <div class="container-login100">
        <div class="row">
            <div class="blue-box">
                <img class="ucr-logo mb-2" src='/Content/images/logo_ucr.png' border='0' alt='logo-ucr' />
                @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group mx-1">
                        <label style="color:white; font-weight:bold; font-size:16px;">Usuario</label>
                        @Html.TextBoxFor(m => m.Username, new { @maxlength = "30", @class = "form-control", required = "required" })
                        <p style="color:red;">@Html.ValidationMessageFor(m => m.Username)
                    </div>
                    <div class="form-group mx-1">
                        <label style="color:white; font-weight:bold; font-size:16px;">Contraseña</label>
                        <!-- UserStory TAM-1.1.3 - Capslock detection -->
                        <input class="form-control" id="password-field" name="Password" type="password" data-toggle="popover" data-placement="left" data-trigger="manual" data-title="Mayúsculas activadas" maxlength="25" autocomplete="off" required />
                        <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password mr-2" style="font-size:inherit;cursor:pointer"></span>
                        <p style="color:red;">@Html.ValidationMessageFor(m => m.Password)</p>
                        <!-- End of UserStory  -->
                    </div>
                    <!-- UserStory 1.5 - link to new page -->
                    <div class="form-row justify-content-between mx-1 pb-3">
                        <button type="submit" class="btn btn-light">Ingresar</button>
                        @Html.ActionLink("¿Has olvidado la contraseña?", "PasswordReset", "Home", new object { }, new { @class = "align-self-start text-secondary" })
                        <!-- End of UserStory  -->
                    </div>
                }
            </div>
        </div>
    </div>
    <footer class="flex-foot fixed-bottom">
        &copy; Universidad de Costa Rica
        <script type="text/javascript">document.write(new Date().getFullYear());</script>
    </footer>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/custom")
</body>

