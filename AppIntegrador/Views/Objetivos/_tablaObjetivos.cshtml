@model IEnumerable<AppIntegrador.Models.Objetivo>

@{
    ViewBag.Title = "_TablaObjetivos";
    int position = 0;
}

@if (Model.Count() == 0)
{
    <div>
        Aún no se agregado objetivos.
    </div>
}
else
{
    <table id="TablaMostrarObjetivos" class="table table-striped table-bordered table-sm " cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaFin)
                </th>
            </tr>
        </thead>
        <thead>
            @foreach (var objetivo in Model)
            {
                <tr>
                    <td>
                        <input type="radio" name="objetivos" value=@(position++) onclick="seleccionaObjetivo(this)"/>
                    </td>
                    <td>
                        @objetivo.nombre
                    </td>
                    <td>
                        @objetivo.fechaInicio.Value.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @objetivo.fechaFin.Value.ToString("dd/MM/yyyy")
                    </td>
                </tr>
                
            }
        </thead>
    </table>
}
