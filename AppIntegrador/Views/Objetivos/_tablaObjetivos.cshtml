@model IEnumerable<AppIntegrador.Models.Objetivo>

@{
    ViewBag.Title = "_TablaObjetivos";
}

@if (Model.Count() == 0)
{
    <div>
        Aún no se agregado objetivos.
    </div>
}
else
{
    <table id="TablaMostrarObjetivos" class="table table-striped table-bordered table-sm " cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaFin)
                </th>
                <th>
                    Opciones
                </th>
            </tr>
        </thead>
        <thead>
            @foreach (var objetivo in Model)
            {
                <tr>
                    <td>
                        <input type="radio" name="objetivos" value="@objetivo.nombre"/>
                    </td>
                    <td>
                        @objetivo.nombre
                    </td>
                    <td>
                        @objetivo.descripcion
                    </td>
                    <td>
                        @objetivo.fechaInicio
                    </td>
                    <td>
                        @objetivo.fechaFin
                    </td>
                    <td>
                        <input type="button" value="Asociar a secciones" class="btn btn-azulUCR float-left" id="AsociarSeccionObjetivoTabla" onclick="#" />
                        <input type="button" value="Editar objetivo" class="btn float-right" id="EditarObjetivoBotonTabla" onclick="#" />
                        <input type="button" value="Borrar objetivo" class="btn btn-danger float-right" id="BorrarObjetivoBotonTabla" onclick="#" />
                    </td>
                </tr>
            }
        </thead>
    </table>
}
