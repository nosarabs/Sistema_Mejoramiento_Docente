@model IEnumerable<AppIntegrador.Models.Objetivo>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Objetivos</h2>

<div class="container">

    @if (Model.Count() == 0)
    {
        <div class="centeredText">
            <p>
                Aún no se han creado objetivos
            </p>
        </div>
    }
    else
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlanDeMejora.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoObjetivo1.Descripcion)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlanDeMejora.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoObjetivo1.Descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Codigo }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Codigo }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Codigo })
                    </td>
                </tr>
            }

        </table>
    }
    <div class="botonCentrado">
        <p>
            @Html.ActionLink("Crear nuevo objetivo", "Create", null, new { @class = "btn btn-Nuevo" })
        </p>
    </div>
</div>