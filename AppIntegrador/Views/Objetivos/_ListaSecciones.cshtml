@model IEnumerable<AppIntegrador.Models.Seccion>

@if (Model.Count() == 0)
{
    <div>
        Aún no se han relacionado secciones al objetivo.
    </div>
}
else
{
    <table id="TablaMostrarSeccionesDeObjetivo" class="table table-striped table-bordered table-sm " cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Código
                </th>
            </tr>
        </thead>
        <thead>
            @foreach (var seccion in Model)
            {
                <tr>
                    <td>
                        @seccion.Nombre
                    </td>
                    <td>
                        @seccion.Codigo
                    </td>
                </tr>
            }
        </thead>
    </table>
}