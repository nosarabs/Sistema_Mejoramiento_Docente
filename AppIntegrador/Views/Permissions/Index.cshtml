@model AppIntegrador.Models.PermissionsViewHolder
@{
    ViewBag.Title = "Index";
}

    <div class="container">
        <div class="row" style="display:flex; padding-left:15px; ">
            <div class="column" style="flex:50%;">
                <h2>
                    Administración de permisos y perfiles
                </h2>
            </div>
        </div>
        <br />
        @using (Html.BeginForm("Index", "Permissions", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "IndexForm" }))
        {
            <div class="row" style="display:flex; padding-left:15px; ">
                <div class="col-md-4" style="flex:50%;">
                    @Html.Label("Seleccione perfiles")
                    <br />

                    @Html.ListBoxFor(model => model.PerfilesSeleccionados, Model.ListaPerfiles, new { @class = "selectpicker" })
                    <br />
                </div>
                <div class="col-md-4" style="flex:50%;">
                    @Html.Label("Seleccione carrera")
                    <br />

                    @Html.DropDownListFor(model => model.CarrerasSeleccionadas, Model.ListaCarreras, new { @class = "form-control", @required = "required" })
                    <br />
                </div>
                <div class="col-md-4" style="flex:50%;">
                    @Html.Label("Seleccione énfasis")
                    <br />
                    @Html.DropDownListFor(model => model.EnfasisSeleccionados, Model.ListaEnfasis, new { @class = "form-control", @required = "required" })
                    <br />
                </div>
            </div>

            <div style="padding:15px;"></div>
            <div style="max-height:650px; overflow-x:auto;">
                <div class="col-md-12" style="display:flex; padding-left:15px; ">

                    <div class="col-md-6" style="display:flex; float:left" ;>

                        <table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%" style="position: sticky;  top: 0; border-collapse: separate; float:left">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.Label("Usuarios")
                                    </th>
                                    <th>
                                        @Html.Label("Perfil asignado a Usuario")
                                    </th>
                                </tr>
                            </thead>

                            @for (int i = 0; i < Model.Personas.Count(); ++i)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => model.Personas[i].Nombre1)
                                    </td>
                                    <td>
                                        @Html.CheckBoxFor(model => model.Personas[i].HasProfileInEmph)
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>

                    <div class="col-md-6" style="display:flex; float:right" ;>

                        <table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%" style="position: sticky;  top: 0; border-collapse: separate; float:right">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.Label("Permisos")
                                    </th>
                                    <th>
                                        @Html.Label("Asignado a Perfil")
                                    </th>
                                </tr>
                            </thead>

                            @for (int i = 0; i < Model.Permisos.Count(); ++i)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => model.Permisos[i].Descripcion)
                                    </td>
                                    <td>
                                        @Html.CheckBoxFor(model => model.Permisos[i].ActiveInProfileEmph)
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
                <br />
                <hr />
                <br />
            </div>
            <input type="hidden" name="updateView" value="false" id="updateView" />
            <input id="create-save" type="submit" value="Crear" class="btn btn-success" />
        }
    </div>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.8.1/css/bootstrap-select.css">
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<!--Código jQuery para cargar en el select de énfasis los énfasis asociados a la carrera elegida.-->
<script>
                $("#CarrerasSeleccionadas").on("change", function(){
                    cargarEnfasis($(this).val());
                })
                function cargarEnfasis(val) {
                    $.getJSON('@Url.Action("CargarEnfasisDeCarrera", "Permissions")' + "?value=" + val, function (result) {
                        $("#EnfasisSeleccionados").html("<option value=\"\" selected disabled hidden >Nada seleccionado</option>");
                        var data = result.data;
                        for (var i = 0; i < data.length; ++i) {
                            var splitted = data[i].toString().split(",");
                            $("#EnfasisSeleccionados").append("<option value=\"" + splitted[0] + "\">" + splitted[1] + "</option>");
                        }
                    })
                }
                $("#EnfasisSeleccionados").on("change", function(){
                    window.document.getElementById("updateView").value = true;
                    $("#IndexForm").submit();
                })
                window.onload = function loadDefaultValue() {
                    $("#EnfasisSeleccionados").append("<option value=\"\" selected disabled hidden >Nada seleccionado</option>");
                    $("#CarrerasSeleccionadas").append("<option value=\"\" selected disabled hidden >Nada seleccionado</option>");
                }

</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquerymin")
    @Scripts.Render("~/bundles/custom")
}
