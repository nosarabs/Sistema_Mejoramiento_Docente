@model IEnumerable<AppIntegrador.Models.Pregunta>

@if (Model.Count() == 0)
{
    <div>
        Aún no se han relacionado preguntas a la acción de mejora.
    </div>
}
else
{
    <table id="TablaMostrarPreguntasDeADM" class="table table-striped table-bordered table-sm " cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    Enunciado
                </th>
                <th>
                    Código
                </th>
            </tr>
        </thead>
        <thead>
            @foreach (var pregunta in Model)
            {
                <tr>
                    <td>
                        @pregunta.Enunciado
                    </td>
                    <td>
                        @pregunta.Codigo
                    </td>
                </tr>
            }
        </thead>
    </table>
}
