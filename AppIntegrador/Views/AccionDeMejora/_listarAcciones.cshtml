@model IEnumerable<AppIntegrador.Models.AccionDeMejora>

@{
    var numAccionable = 1;
}

@if (Model.Count() == 0)
{
    <div class="centeredText">
        <p>
            Aún no se han creado Acciones de mejora en este Objetivo.
        </p>
    </div>
}
else
{
    <table class="table">
        <colgroup>
            <col class="TablasNumero">
            <col style="width: 57%;">
            <col class="TablasFecha">
            <col class="TablasFecha">
        </colgroup>

        <thead class="thead-light">
            <tr>
                <th>
                    #
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Objetivo.descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaFin)
                </th>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr class="FilaTablasPlanesDeMejora" onclick="clickAccionDeMejora(@numAccionable, @item.codPlan, `@item.nombreObj`, `@item.descripcion`)" )>
                    <td>
                        @numAccionable
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechaInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechaFin)
                    </td>
                </tr>
                numAccionable++;
            }
        </tbody>
    </table>
    <div class="card card-default">
        <div class="card-body grisUCR3">
            <div>
                <div id="encabezadoAccionable">
                    <h4 style="text-align:center">Lista de Accionables</h4>
                    <h2 style="text-align:center">Seleccione una acción de mejora</h2>
                </div>
                <div id="divAccionables">
                </div>
            </div>
        </div>
    </div>
}