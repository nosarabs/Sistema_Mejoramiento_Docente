@model IEnumerable<AppIntegrador.Models.AccionDeMejora>

@{
    ViewBag.Title = "_TablaAccionMejora";
    int position = 0;
}

@if (Model.Count() == 0)
{
    <div>
        Aún no se agregado acciones de mejora.
    </div>
}
else
{
    <table id="TablaMostrarAccionesMejora" class="table table-striped table-bordered table-sm " cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaFin)
                </th>
                <th>
                    Opciones
                </th>
            </tr>
        </thead>
        <thead>
            @foreach (var accion in Model)
            {
                <tr>
                    <td>
                        <input type="radio" name="acciones" value=@(position++) onclick="seleccionaAccion(this)" />
                    </td>
                    <td>
                        @accion.descripcion
                    </td>
                    <td>
                        @accion.fechaInicio
                    </td>
                    <td>
                        @accion.fechaFin
                    </td>
                    <td>
                        <input type="button" value="Asociar a preguntas" class="btn btn-azulUCR float-left" id="AsociarPreguntaAccionMejoraTabla" onclick="#" />
                        <input type="button" value="Editar acción de mejora" class="btn float-right" id="EditarAccionMejoraBotonTabla" onclick="#" />
                        <input type="button" value="Borrar acción de mejora" class="btn btn-danger float-right" id="BorrarAccionMejoraBotonTabla" onclick="#" />
                    </td>
                </tr>

            }
        </thead>
    </table>
}
