@model IEnumerable<AppIntegrador.Models.Accionable>

@{
    ViewBag.Title = "_TablaAccionables";
    int position = 0;
}

@if (Model.Count() == 0)
{
    <div>
        Aún no se han agregado accionables.
    </div>
}
else
{
    <table id="TablaMostrarAccionables" class="table table-striped table-bordered table-sm " cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaFin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.peso)
                </th>
                <th>
                    Porcentaje
                </th>
                <th>
                    Tipo
                </th>
                <th>
                    Opciones
                </th>
            </tr>
        </thead>
        <thead>
            @foreach (var accionable in Model)
            {
            <tr>
                <td>
                    @accionable.descripcion
                </td>
                <td>
                    @accionable.fechaInicio
                </td>
                <td>
                    @accionable.fechaFin
                </td>
                <td>
                    @accionable.peso
                </td>
                <td>
                    @accionable.pesoPorcentaje
                </td>
                <td>
                    @if (accionable.tipo == "P")
                    {
                        <p>Porcentaje</p>
                    }
                    else if (accionable.tipo == "S")
                    {
                        <p>Si/No</p>
                    }
                    else if (accionable.tipo == "E")
                    {
                        <p>Escala</p>
                    }
                </td>
                <td>
                    <input type="button" value="Editar accionable" class="btn float-right" id="EditarAccionable" onclick="#" />
                    <input type="button" value="Borrar accionable" class="btn btn-danger float-right" id="BorrarAccionable" onclick="#" />
                </td>
            </tr>

            }
        </thead>
    </table>
}
