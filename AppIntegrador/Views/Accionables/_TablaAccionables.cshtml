@model IEnumerable<AppIntegrador.Models.Accionable>

@{
    ViewBag.Title = "_TablaAccionables";
    int position = 0;
}

@if (Model.Count() == 0)
{
    <div>
        Aún no se han agregado accionables.
    </div>
}
else
{
    <table id="TablaMostrarAccionables" class="table table-striped table-bordered table-sm " cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fechaFin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.peso)
                </th>
                <th>
                    Porcentaje
                </th>
                <th>
                    Tipo
                </th>
                <th>
                    Responsables
                </th>
            </tr>
        </thead>
        <thead>
            @foreach (var accionable in Model)
            {
                <tr>
                    <td>
                        @accionable.descripcion
                    </td>
                    <td>
                        @accionable.fechaInicio.Value.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @accionable.fechaFin.Value.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @accionable.peso
                    </td>
                    <td>
                        @accionable.pesoPorcentaje
                    </td>
                    <td>
                        @if (accionable.tipo == "P")
                        {
                            <p>Porcentaje</p>
                        }
                        else if (accionable.tipo == "S")
                        {
                            <p>Si/No</p>
                        }
                        else if (accionable.tipo == "E")
                        {
                            <p>Escala</p>
                        }
                    </td>
                    <td>
                        <input type="button" value="Añadir responsables" class="btn-azulUCR float-right" id="AgregarResponsablesAccionables" onclick="modalGen('#ModalResponsables')" />
                    </td>
                </tr>

            }
        </thead>
    </table>
}

@{Html.RenderPartial("~/Views/Accionables/_ModalAnadirResponsables.cshtml", new AppIntegrador.Models.Accionable());}
