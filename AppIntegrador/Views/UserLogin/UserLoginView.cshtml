@model AppIntegrador.Models.UserProfile

@{
    ViewBag.Title = "UserLoginView";
}

@using (Html.BeginForm("UserLoginView", "UserLogin", FormMethod.Post))
{
    <fieldset>
        <legend>Mvc Simple Login Application Demo</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }
